<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @channel.name %>
  <%= private_channel_label(@channel) %>
</p>

<%= link_to 'Редактировать канал', edit_channel_path(@channel) %>
<%= link_to 'Удалить канал', channel_path(@channel), method: :delete %>

<ul>
    <% @channel.subscriber.each do |subscriber|%>
        <li><span><%= subscriber.username  %></span><%= link_to 'Удалить подписцика', "/channels/#{@channel.id}/unsubscribe/#{subscriber.id}" %></li>
    <% end %>
</ul>

<%= form_tag '/channels/'+@channel.id.to_s, method: :get do %>
    <fieldset>
      <div class="input-append">
        <%= text_field_tag :username, '', class: :span6 %>
        <%= submit_tag 'Поиск', class: :btn %>
      </div>
    </fieldset>
<% end %>
<ul>
  <% @users.each do |user|%>
    <li><span><%= user.username  %></span><%= link_to 'Добавить на канал', "/channels/#{@channel.id}/subscribe/#{user.id}" %></li>
  <% end %>
</ul>
